<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarSize">0dp</item>
        <item name="windowNoTitle">true</item>
        <!-- 无标题，设置的是decorview的背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 默认是有阴影背景的,加以下属性可以改变阴影度阴影 -->
    </style>

    <style name="dialog_anim_bottom_center" parent="android:Animation">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/anim_dialog_btc</item>
        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/anim_dialog_ctb</item>
    </style>

</resources>